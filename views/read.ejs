<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- <h1><center>CHALIYE SHURU KARTE HAIN</center> </h1> -->
    <div class="w-full h-full bg-zinc-900 p-10 text-white ">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="Users flex gap-5 flex-wrap">
            <% if(users.length > 0) { %>

                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image%>" alt="" srcset="">
                        </div>
                        <h3 class="text-2xl tracking-tighter mt-3"><%= user.name%></h3>
                        <h5 class="text-zinc-500"><%= user.email%></h5>
                        <div class="flex gap-3 mt-10">
                            <a href="/edit/<%=user._id %>" class="text-zinc-600">Edit User</a>
                            <a href="/delete/<%= user._id%>" class="text-red-500">Delete User</a>
        
        
                        </div>
                    </div>
        
                   <% })%>
            <% } else { %>
                <h1 class="text-zinc-700">No user found</h1>
           <% }%> 
          
        </div>
        
    </div>
</body>
</html>